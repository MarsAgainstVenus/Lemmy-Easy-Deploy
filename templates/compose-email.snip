  postfix:
    image: mwader/postfix-relay
    env_file:
      - ./postfix.env
      - {{ POSTFIX_EXTRA_ENV }}
    volumes:
      - postfix_data:/var/lib/postfix
      - postfix_mail:/var/mail
      - postfix_spool:/var/spool/postfix
      - postfix_keys:/etc/opendkim/keys
    restart: always
    logging: *default-logging
